<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="behaviour"
        app:title="@string/settings_category_behaviour"
        app:summary="@string/settings_category_behaviour_summary"
        app:icon="@drawable/ic_gamepad_24dp">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.BehaviourSettingsActivity" />
    </Preference>

    <Preference
        app:key="graphics"
        app:title="@string/settings_category_graphics"
        app:summary="@string/settings_category_graphics_summary"
        app:icon="@drawable/ic_image_24dp">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.GraphicsSettingsActivity" />
    </Preference>

    <Preference
        app:key="display"
        app:title="@string/settings_category_display"
        app:summary="@string/settings_category_display_summary"
        app:icon="@drawable/ic_smartphone_24dp">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.DisplaySettingsActivity" />
    </Preference>

    <Preference
        app:key="audio"
        app:title="@string/settings_category_audio"
        app:summary="@string/settings_category_audio_summary"
        app:icon="@drawable/ic_music_note_24dp">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.AudioSettingsActivity" />
    </Preference>

    <Preference
        app:key="miscellaneous"
        app:title="@string/settings_category_miscellaneous"
        app:summary="@string/settings_category_miscellaneous_summary"
        app:icon="@drawable/ic_cogs_24dp">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.MiscellaneousSettingsActivity" />
    </Preference>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="hidden_category"
        app:isPreferenceVisible="false">

        <ListPreference
            app:key="button_map_a"
            app:defaultValue="b" />
        <ListPreference
            app:key="button_map_b"
            app:defaultValue="a" />
        <ListPreference
            app:key="button_map_x"
            app:defaultValue="unmapped" />
        <ListPreference
            app:key="button_map_y"
            app:defaultValue="menu" />
        <ListPreference
            app:key="button_map_up"
            app:defaultValue="up" />
        <ListPreference
            app:key="button_map_down"
            app:defaultValue="down" />
        <ListPreference
            app:key="button_map_left"
            app:defaultValue="left" />
        <ListPreference
            app:key="button_map_right"
            app:defaultValue="right" />
        <ListPreference
            app:key="button_map_start"
            app:defaultValue="start" />
        <ListPreference
            app:key="button_map_select"
            app:defaultValue="select" />
        <ListPreference
            app:key="button_map_l1"
            app:defaultValue="back" />
        <ListPreference
            app:key="button_map_l2"
            app:defaultValue="unmapped" />
        <ListPreference
            app:key="button_map_r1"
            app:defaultValue="unmapped" />
        <ListPreference
            app:key="button_map_r2"
            app:defaultValue="unmapped" />
        <ListPreference
            app:key="button_map_thumbl"
            app:defaultValue="turbo" />
        <ListPreference
            app:key="button_map_thumbr"
            app:defaultValue="unmapped" />
        <ListPreference
            app:key="button_map_analogue_left"
            app:defaultValue="dpad" />
        <ListPreference
            app:key="button_map_analogue_right"
            app:defaultValue="tilt" />
    </PreferenceCategory>
</PreferenceScreen>
