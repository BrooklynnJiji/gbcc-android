<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp">

    <SwitchPreference
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="auto_resume"
        app:title="@string/settings_auto_resume" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="auto_save"
        app:title="@string/settings_auto_save" />

    <SwitchPreference
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="frame_blend"
        app:title="@string/settings_frame_blend" />

    <EditTextPreference
        app:defaultValue="0"
        app:iconSpaceReserved="false"
        app:key="turbo_speed"
        app:title="@string/settings_turbo_speed" />

    <SwitchPreference
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="vsync"
        app:title="@string/settings_vsync" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="interlacing"
        app:title="@string/settings_interlacing" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="show_fps"
        app:title="@string/settings_fps" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="@string/settings_shader_dot_matrix"
        android:entries="@array/shader_names_array"
        android:entryValues="@array/shader_values_array"
        android:key="shader_dmg"
        android:title="@string/settings_shader_dmg"
        app:iconSpaceReserved="false" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="@string/settings_shader_subpixel"
        android:entries="@array/shader_names_array"
        android:entryValues="@array/shader_values_array"
        android:key="shader_gbc"
        android:title="@string/settings_shader_gbc"
        app:iconSpaceReserved="false" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="-1"
        android:entries="@array/orientation_names_array"
        android:entryValues="@array/orientation_values_array"
        android:key="orientation"
        android:title="@string/settings_orientation"
        app:iconSpaceReserved="false" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="auto"
        android:entries="@array/skin_names_array"
        android:entryValues="@array/skin_values_array"
        android:key="skin"
        android:title="@string/settings_skin"
        app:iconSpaceReserved="false" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="Teal"
        android:entries="@array/color_names_array"
        android:entryValues="@array/color_values_array"
        android:key="color"
        android:title="@string/settings_color"
        app:iconSpaceReserved="false" />

    <com.philj56.gbcc.SummaryListPreference
        android:defaultValue="auto"
        android:entries="@array/night_mode_names_array"
        android:entryValues="@array/night_mode_values_array"
        android:key="night_mode"
        android:title="@string/settings_night_mode"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="arrange"
        android:title="@string/settings_arrange"
        app:iconSpaceReserved="false">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.ArrangeActivity" />
    </Preference>

    <Preference
        android:key="license"
        android:title="@string/settings_license"
        app:iconSpaceReserved="false">
        <intent
            android:targetPackage="com.philj56.gbcc"
            android:targetClass="com.philj56.gbcc.LicenseActivity">
            <extra
                android:name="file"
                android:value="gbcc" />
        </intent>
    </Preference>
</PreferenceScreen>
