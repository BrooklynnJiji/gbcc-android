<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:fillViewport="true"
        android:verticalScrollbarPosition="left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/buttonRemapLeftTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_unmapped"
                app:icon="@drawable/ic_controller_left_trigger" />

            <Button
                android:id="@+id/buttonRemapLeftShoulder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_back"
                app:icon="@drawable/ic_controller_left_shoulder" />

            <Button
                android:id="@+id/buttonRemapSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_select"
                app:icon="@drawable/ic_controller_startselect" />

            <Button
                android:id="@+id/buttonRemapDpadUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/key_description_up"
                app:icon="@drawable/ic_controller_button_dpad_up" />

            <Button
                android:id="@+id/buttonRemapDpadDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_down"
                app:icon="@drawable/ic_controller_button_dpad_down" />

            <Button
                android:id="@+id/buttonRemapDpadLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_left"
                app:icon="@drawable/ic_controller_button_dpad_left" />

            <Button
                android:id="@+id/buttonRemapDpadRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_right"
                app:icon="@drawable/ic_controller_button_dpad_right" />

            <Button
                android:id="@+id/buttonRemapLeftStick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/key_description_turbo"
                app:icon="@drawable/ic_controller_stick" />

            <Button
                android:id="@+id/buttonRemapLeftStickMove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stick_description_dpad"
                app:icon="@drawable/ic_controller_stick_move" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/controllerLayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/controller_description"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_controller_layers" />

    </FrameLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:fillViewport="true"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/buttonRemapRightTrigger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_unmapped"
                app:icon="@drawable/ic_controller_right_trigger" />

            <Button
                android:id="@+id/buttonRemapRightShoulder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_unmapped"
                app:icon="@drawable/ic_controller_right_shoulder" />

            <Button
                android:id="@+id/buttonRemapStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_start"
                app:icon="@drawable/ic_controller_startselect" />

            <Button
                android:id="@+id/buttonRemapA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/key_description_b"
                app:icon="@drawable/ic_controller_button_a" />

            <Button
                android:id="@+id/buttonRemapB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_a"
                app:icon="@drawable/ic_controller_button_b" />

            <Button
                android:id="@+id/buttonRemapX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_unmapped"
                app:icon="@drawable/ic_controller_button_x" />

            <Button
                android:id="@+id/buttonRemapY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/key_description_menu"
                app:icon="@drawable/ic_controller_button_y" />

            <Button
                android:id="@+id/buttonRemapRightStick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/key_description_unmapped"
                app:icon="@drawable/ic_controller_stick" />

            <Button
                android:id="@+id/buttonRemapRightStickMove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stick_description_tilt"
                app:icon="@drawable/ic_controller_stick_move" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>