<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GBCC" parent="Base.Theme.GBCC">
        <!-- Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>

        <item name="android:colorBackground">@color/black_800</item>
        <item name="colorSurface">@color/black_800</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>

        <!-- Component styles -->
        <item name="android:statusBarColor">@color/black_900</item>
        <item name="materialButtonStyle">@style/Widget.GBCC.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.GBCC.Button.TextButton</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.GBCC.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.GBCC.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.GBCC.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimaryNightDark</item>
        <item name="colorOnPrimary">@color/white_50</item>
    </style>

    <style name="ThemeOverlay.GBCC.Button" parent="">
        <item name="colorPrimary">@color/colorPrimaryNightDark</item>
        <item name="colorOnPrimary">@color/white_50</item>
    </style>

    <style name="ThemeOverlay.GBCC.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorOnPrimary">@color/black_900</item>
    </style>

    <style name="ThemeOverlay.GBCC.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.GBCC.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.GBCC.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.GBCC.Button.TextButton.Dialog</item>
    </style>
</resources>