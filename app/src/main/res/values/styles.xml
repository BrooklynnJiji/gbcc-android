<resources>
    <!-- Variant toolbar theme for contextual action bars -->
    <style name="Widget.GBCC.Toolbar.Variant" parent="Widget.Material3.Toolbar">
        <item name="navigationIconTint">?attr/colorOnSurfaceVariant</item>
        <item name="titleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.GBCC.Button.PathButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">?attr/minTouchTargetSize</item>
        <item name="android:minWidth">?attr/minTouchTargetSize</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:textColor">@color/path_entry_text</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.GBCC.Button.PathButton</item>
    </style>

    <style name="ShapeAppearanceOverlay.GBCC.Button.PathButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="TurboToggleTheme" parent="">
        <item name="colorPrimary">@color/gbcButton</item>
        <item name="colorOnSurface">@color/gbcButton</item>
        <item name="colorOutline">@color/gbcToggleBackground</item>
        <item name="colorPrimaryContainer">@color/gbcToggleBackground</item>
    </style>

    <style name="TurboToggleThemeDark" parent="">
        <item name="colorPrimary">@color/dmgDarkButton</item>
        <item name="colorOnSurface">@color/dmgDarkButton</item>
        <item name="colorOutline">@color/dmgDarkToggleBackground</item>
        <item name="colorPrimaryContainer">@color/dmgDarkToggleBackground</item>
    </style>

    <style name="OledDark" parent="">
        <item name="colorSurface">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
</resources>
