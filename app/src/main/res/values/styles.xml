<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme">
        <item name="android:statusBarColor">#000000</item>
        <item name="toolbarStyle">@style/DarkToolbar</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="DarkToolbar" parent="Toolbar">
        <item name="android:background">@color/colorPrimaryNight</item>
    </style>

</resources>
