<resources>
    <!-- Variant toolbar theme for contextual action bars -->
    <style name="Widget.GBCC.Toolbar.Variant" parent="Widget.Material3.Toolbar">
        <item name="navigationIconTint">?attr/colorOnSurfaceVariant</item>
        <item name="titleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TurboToggleTheme" parent="">
        <item name="colorPrimary">@color/gbcButton</item>
        <item name="colorOnSurface">@color/gbcButton</item>
        <item name="colorOutline">@color/gbcToggleBackground</item>
        <item name="colorPrimaryContainer">@color/gbcToggleBackground</item>
    </style>

    <style name="TurboToggleThemeDark" parent="">
        <item name="colorPrimary">@color/dmgDarkButton</item>
        <item name="colorOnSurface">@color/dmgDarkButton</item>
        <item name="colorOutline">@color/dmgDarkToggleBackground</item>
        <item name="colorPrimaryContainer">@color/dmgDarkToggleBackground</item>
    </style>
</resources>
