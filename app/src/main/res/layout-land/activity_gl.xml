<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGameBoyTeal"
    tools:context=".GLActivity">

    <com.philj56.gbcc.MyGLSurfaceView
        android:id="@+id/myGLSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonA"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:contentDescription="A button"
        android:scaleType="fitCenter"
        android:src="@drawable/a"
        app:layout_constraintBottom_toBottomOf="@+id/dpad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dpad"
        app:layout_constraintVertical_bias="0.32999998" />

    <ImageButton
        android:id="@+id/buttonB"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="B button"
        android:scaleType="fitCenter"
        android:src="@drawable/b"
        app:layout_constraintEnd_toEndOf="@+id/buttonA"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/screenBorderRight"
        app:layout_constraintTop_toBottomOf="@+id/buttonA" />

    <ImageButton
        android:id="@+id/buttonStart"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Start Button"
        android:scaleType="fitCenter"
        android:src="@drawable/start"
        app:layout_constraintEnd_toEndOf="@+id/dpad"
        app:layout_constraintTop_toBottomOf="@+id/dpad" />

    <ImageButton
        android:id="@+id/buttonSelect"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Select Button"
        android:scaleType="fitCenter"
        android:src="@drawable/start"
        app:layout_constraintEnd_toEndOf="@+id/buttonStart"
        app:layout_constraintTop_toBottomOf="@+id/buttonStart" />

    <ImageView
        android:id="@+id/dpad"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/dpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/screenBorderLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/screenBorderBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Screen Border Bottom"
        android:scaleType="fitXY"
        android:src="@drawable/border_edge"
        app:layout_constraintEnd_toEndOf="@+id/myGLSurfaceView"
        app:layout_constraintStart_toStartOf="@+id/myGLSurfaceView"
        app:layout_constraintTop_toBottomOf="@+id/myGLSurfaceView" />

    <ImageView
        android:id="@+id/screenBorderLeft"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Left"
        android:scaleType="fitXY"
        android:src="@drawable/border_edge"
        app:layout_constraintBottom_toBottomOf="@+id/myGLSurfaceView"
        app:layout_constraintEnd_toStartOf="@+id/myGLSurfaceView"
        app:layout_constraintTop_toTopOf="@+id/myGLSurfaceView" />

    <ImageView
        android:id="@+id/screenBorderRight"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Right"
        android:scaleType="fitXY"
        android:src="@drawable/border_edge"
        app:layout_constraintBottom_toBottomOf="@+id/myGLSurfaceView"
        app:layout_constraintStart_toEndOf="@+id/myGLSurfaceView"
        app:layout_constraintTop_toTopOf="@+id/myGLSurfaceView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/screenBorderBottomRight"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Bottom Right"
        android:rotation="90"
        android:scaleType="fitXY"
        android:src="@drawable/border_corner"
        app:layout_constraintBottom_toBottomOf="@+id/screenBorderBottom"
        app:layout_constraintStart_toEndOf="@+id/screenBorderBottom"
        app:layout_constraintTop_toBottomOf="@+id/screenBorderRight"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/screenBorderBottomLeft"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Bottom Left"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/border_corner"
        app:layout_constraintBottom_toBottomOf="@+id/screenBorderBottom"
        app:layout_constraintEnd_toStartOf="@+id/screenBorderBottom"
        app:layout_constraintTop_toBottomOf="@+id/screenBorderLeft"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/screenBorderBottomLeft2"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Bottom Left"
        android:rotation="270"
        android:scaleType="fitXY"
        android:src="@drawable/border_corner"
        app:layout_constraintBottom_toTopOf="@+id/screenBorderLeft"
        app:layout_constraintEnd_toStartOf="@+id/screenBorderTop"
        app:layout_constraintTop_toTopOf="@+id/screenBorderTop" />

    <ImageView
        android:id="@+id/screenBorderTopRight"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:contentDescription="Screen Border Top Right"
        android:scaleType="fitXY"
        android:src="@drawable/border_corner"
        app:layout_constraintBottom_toTopOf="@+id/screenBorderRight"
        app:layout_constraintStart_toEndOf="@+id/screenBorderTop"
        app:layout_constraintTop_toTopOf="@+id/screenBorderTop"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/screenBorderTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="Screen Border Top"
        android:scaleType="fitXY"
        android:src="@drawable/border_edge"
        app:layout_constraintBottom_toTopOf="@+id/myGLSurfaceView"
        app:layout_constraintEnd_toEndOf="@+id/myGLSurfaceView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myGLSurfaceView" />

    <ImageView
        android:id="@+id/topRightCorner"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_top_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/topLeftCorner"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:rotation="270"
        android:src="@drawable/ic_top_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottomLeftCorner"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:rotation="180"
        android:src="@drawable/ic_top_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bottomRightCorner"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:rotation="90"
        android:src="@drawable/ic_top_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>